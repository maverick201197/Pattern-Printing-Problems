#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,j,n;
    cout<<"enter the number" <<endl;
    cin>>n;
    for(i=1; i<=n; i++)
    {
        for(j=1; j<=i; j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
        return 0;
    }
    
    enter the number
5
